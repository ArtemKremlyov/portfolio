        #skills-component


script(type="text/x-template")#skills-list
  .skill
    ul.skill__rows
     li.skill__row(v-for='skill in skills' :key="skill.skillsGroup")
      skills-row(
        :skill='skill'
      )


script(type="text/x-template")#skills-row
       .skill-row
        .skill__headline {{skill.skillsGroup}}
        ul.skill__list
          li.skill__item(v-for='(skillPercent,skillName) in skill.skills')
            skill(
              :skill-name="skillName"
              :skill-percent="skillPercent"
            )
 

script(type="text/x-template")#skill
 .skill-component
    .skill__name {{skillName}}
    svg.percentage(viewBox='0 0 100 100' preserveAspectRatio='none')
      defs.defs
        linearGradient#linear-gradient
          stop(offset='0%' stop-color='#d0731b')
          stop(offset='100%' stop-color='#dc9322 ')
      circle.circle.circle-under(cx='50' cy='50' r='40')
      circle.circle.circle-above(cx='50' cy='50' r='40' stroke="url(#linear-gradient)" ref="color-circle")                   