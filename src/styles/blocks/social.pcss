.social-list{
    display: flex;
    align-items: center;
}
.social-item{
    margin-right: 40px;
    opacity: 0.5;

    &:hover{
        opacity: 1;
    }

     &:last-child{
         margin-right: 0;
     }
}
.social-item__link{
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
}