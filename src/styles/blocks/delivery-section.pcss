.slider{
    margin-bottom: 200px;
}
.slider__headline{
    color: #ffffff;
    font-size: 36px;
    font-weight: 700;
}
.slider__control{
    display: flex;
    margin-bottom: 110px;
}
.slider__btns{
    display: flex;
    margin-left: 123px;
}
.circle-btns{
    display: flex;
}
.circle-btns__item{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    color: white;
    border: 2px white solid;
    background: svg-load('short-arrow.svg', fill=white, width=8px, height=10px) no-repeat center center;

     &--left{
         transform: rotate(-180deg);
         margin-right: 20px;
     }
}
.slider-item__icon{
    background: svg-load('quote.svg', fill=white, width=73px, height=65px) no-repeat;
    width: 73px;
    height: 65px;
    opacity: 0.05;
}
.slider-item{
    max-width: 445px;
    color: white;
    margin-right: 80px;
}
.slider-item__column{
    display: flex;
    margin-bottom: 27px;
    justify-content: center;

     &:last-child{
         margin-bottom: 0;
     }
}
.slider-item__text{
    font-size: 16px;
    font-weight: 400;
    color: white;
    opacity: 0.5;
    margin-left: 20px;
    line-height: 30px;
    max-width: 345px;
}
.slider-list{
    display: flex;
}
.slider__ava{
    width: 75px;
    height: 73px;
    margin-right: 28px;
}
.autor{
    max-height: initial;
}
.slider-item__name{
    font-size: 18px;
    font-weight: 700;
}
.slider-item__rang{
    font-size: 16px;
    font-weight: 400;
    opacity: 0.3;
}
.slider-item__data{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}











.form{
    width: 870px;
}

.form__row{
    display: flex;
    flex: 1;
}
.form__label{
    position: relative;
    flex: 1;
    margin-right: 50px;

}
    .form__textarea{
        height: 82px;
        resize: none;
        margin-bottom: 61px;
        width: 100%;
        padding-top: 7px;
    }
.form__input,.form__textarea{
    background: transparent;
    border: transparent;
    border-bottom: 2px white solid;
    font-size: 18px;
    font-weight: 700;
    color: white;
    padding-left: 45px;
    outline: none;

    &:focus{
        border-bottom:4px #dc9322 solid;
            .form__label-icon{
                opacity: 1;
            }
    }
}
.form__input{
    margin-bottom: 45px;
    height: 58px;
    width: 100%;
}
.form__text{
    font-size: 16px;
    font-weight: 400;
    color: white;
    opacity: 0.3;
}
.send-btn{
    width: 347px;
    height: 80px;
    background-image: linear-gradient(to right, #d0731b 0%, #dc9322 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    color: white;
    transform: 0.4s;

     &:hover{
         opacity: 0.8;
     }
}
.form__label-icon{
    position: absolute;
    top: 38px; 
    opacity: .3;
    left:3px;

     &--textarea{
        top: 25px;
     }
}
.list-top{
    position: absolute;
    right: -335px;
    top: -165px;
}
.list-bottom{
    position: absolute;
    bottom: -61vh;
    right: 30px;
}
.contacts__headline{
    font-size: 36px;
    margin-bottom: 95px;
font-weight: 700;
color: white;
}


.footer__social{
    .social-list{
        .social-item{
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 1px white solid;
            display: flex;
            align-items: center;
            justify-content: center;

             &:hover{
                 background-color: white;
                 .social-icon{
                     fill: black;
                 }
             }
        }
    }
}